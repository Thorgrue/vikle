<div class="container mx-auto">
  <h1 class="m-2 text-center">Hey hey, voilà tous les contes que tu peux écouter ici!
  Enjoy ✨</h1>
  <div class="grid grid-flow-row grid-cols-3">
    <% @audiobooks.each do |audiobook| %>
    <%= link_to audiobook_path(audiobook) do %>
        <div class="m-4 p-3 bg-framboise rounded-lg text-center">
          <%= cl_image_tag audiobook.photo.key, height: 300, width: 400, crop: :fill %>
          <p class="text-2xl font-nanum-pen mt-1 mb-3"><%= audiobook.title %></p>
          <div class="w-full font-nanum-pen text-lg grid grid-cols-3">
            <p class="text-sm"><% audiobook.average_rating.to_i.times do %>
              ⭐️
              <% end %>
            </p>
            <p>🎙</p>
            <p>⏳</p>
            <p><%= audiobook.reviews.count %> avis</p>
            <p><%= audiobook.user.username %></p>
            <p><%= audiobook.duration %>''</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
    <p class="my-10 text-center mx-auto w-1/2 bg-soleil rounded-full shadow"><%= link_to 'Enregistre ton propre conte', new_audiobook_path  %></p>
</div>
